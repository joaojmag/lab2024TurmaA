Algoritmo "GUANABARA_07.2"


var

   num: Inteiro

inicio

      Escreval("O número é Par ou Ímpar? ")
      EscrevaL(" ")
      Escreva("Digite um número:")
      Leia(num)

      Se ( num % 2 = 0 ) entao
         EscrevaL(num, " é Par!")
      Senao
         EscrevaL(num, " é Ímpar!")
      FimSe

fimalgoritmo
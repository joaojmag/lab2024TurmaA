algoritmo "exercicio_20"
var

   numero: inteiro

inicio
    Escreva("Me fala um número: ")
    Leia(numero)
    
    se (numero % 2 = 0) entao
       Escreva("Esse número é PAR.")
    fimse
    
    se (numero % 2 =1) entao
       Escreva("Esse número é ÍMPAR.")
    fimse
    
fimalgoritmo
algoritmo "exercicio_40"

// atividade de multiplos de 3

var

   aplicativo: inteiro

inicio

      Escreval("APLICATIVO DE CONTAGEM")
      Escreval("------------------------")
      aplicativo <- 0
      Enquanto (aplicativo <= 18) faca
      Escreva(aplicativo)
      aplicativo <- aplicativo + 3
      Escreval(" ")
      FimEnquanto
      Escreval("Acabou!")

fimalgoritmo
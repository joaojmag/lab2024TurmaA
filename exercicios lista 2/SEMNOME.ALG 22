Algoritmo "semnome"


var
valordepassagem,distancia,valorpassagem:real


Inicio
escreva("qual a distancia?")
leia(distancia)

//calculando
   se (distancia>=200) entao
   valorpassagem <- distancia * 0.50
   escreval("o valor da passagem é de ", valorpassagem , " reais")
   senao
   valordepassagem <- distancia * 0.45
    escreval("o valor da passagem é de ", valordepassagem , " reais")
             FimSe


Algoritmo "semnome"

var
escolhaum,escolhadois:inteiro
 

Inicio


escreval("jogador1" )
 escreval("opçao1=pedra,opçao2=papel,opçao3=tesoura")

leia(escolhaum )

escreval("jogador 2")
escreval("opçao1=pedra,opçao2=papel,opçao3=tesoura")
leia(escolhadois )

 //empates
se ( (escolhaum =1) e (escolhadois=1)  ) ou (  (escolhaum =2) e (escolhadois=2)  )  ou  ( (escolhaum =3)e (escolhadois=3) ) entao
escreval("empate:jogue de novo")
senao
   //resto
  se(escolhaum=1)e (escolhadois=3)entao
  escreval("jogador1 ganhou:PARABÉNS")
  
  senao
  se(escolhaum=2)e (escolhadois=1)entao
  escreval("jogador2 ganhou:PARABÉNS")
  
  senao
  se(escolhaum=3)e (escolhadois=2)entao
  escreval("jogador2 ganhou:PARABÉNS")
  
  senao
 se(escolhaum=3)e (escolhadois=1)entao
  escreval("jogador2 ganhou:PARABÉNS")
  
  senao
se(escolhaum=1)e (escolhadois=2)entao
  escreval("jogador2 ganhou:PARABÉNS")

senao
 (escolhaum=2)e (escolhadois=3)entao
  escreval("jogador2 ganhou:PARABÉNS")





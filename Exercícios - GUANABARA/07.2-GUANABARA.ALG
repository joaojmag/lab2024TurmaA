Algoritmo "07.2-GUANABARA"

//Aula #07.2 Guanabara "Par ou Ímpar"

var

   num: Inteiro

inicio

      Escreval("Meu número é Par ou Ímpar? ")
      EscrevaL(" ")
      Escreva("Digite um número:")
      Leia(num)
      
      Se ( num % 2 = 0 ) entao
         EscrevaL(num, " é Par!")
      Senao
         EscrevaL(num, " é Ímpar!")
      FimSe

fimalgoritmo